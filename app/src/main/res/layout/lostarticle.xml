<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
style="@style/loginParent">
<ScrollView
    style="@style/parent">

    <RelativeLayout
        style="@style/parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:weightSum="12">

            <LinearLayout
                style="@style/parent"
                android:background="@drawable/login_shape_bk"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageView
                    style="@style/parent"
                    android:background="@drawable/ic_login_bk"
                    android:contentDescription="login background" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">


            <TextView
                style="@style/headerText"
                android:layout_gravity="center"
                android:text="@string/lostarticles"
                />

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/loginCard"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/loginViewsMargin"
                android:background="@color/whiteCardColor"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/complainantName"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/complainantemail"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/complainantmobilenumber"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/complainantfather_mother"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/placeoflost"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="@string/dateoflost"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <EditText
                                android:hint="@string/dateoflost"
                                android:layout_weight="0.6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </EditText>
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_weight="0.2"
                                android:background="@null"
                                android:layout_width="35dp"
                                android:src="@drawable/calender"
                                android:layout_height="35dp">
                            </ImageButton>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="@string/timeoflost"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <EditText
                                android:hint="@string/timeoflost_hint"
                                android:layout_weight="0.6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </EditText>
                            <ImageButton
                                android:layout_gravity="center"
                                android:layout_weight="0.2"
                                android:background="@null"
                                android:layout_width="35dp"
                                android:src="@drawable/time"
                                android:layout_height="35dp">
                            </ImageButton>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/lostarticles"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:hint="@string/lostarticles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>



                    <Button
                        android:layout_marginTop="40dp"
                        android:id="@+id/submit"
                        android:layout_gravity="center"
                        android:text="@string/submit"
                        android:textStyle="bold"
                        android:background="@color/colorAccent"
                        android:textColor="@color/whiteTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>

</RelativeLayout>
