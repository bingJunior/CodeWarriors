<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
style="@style/loginParent">
<ScrollView
    style="@style/parent">

    <RelativeLayout
        style="@style/parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:weightSum="12">

            <LinearLayout
                style="@style/parent"
                android:background="@drawable/login_shape_bk"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageView
                    style="@style/parent"
                    android:background="@drawable/ic_login_bk"
                    android:contentDescription="login background" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">


            <TextView
                style="@style/headerText"
                android:layout_gravity="center"
                android:text="@string/missingchildrensearch"
                />

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/loginCard"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/loginViewsMargin"
                android:background="@color/whiteCardColor"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/missingdate"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_weight="0.7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_weight="0.2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </EditText>
                            <ImageButton
                                android:background="@null"
                                android:layout_weight="0.1"
                                android:layout_width="24dp"
                                android:layout_height="35dp"
                                android:src="@drawable/calender">
                            </ImageButton>
                            <TextView
                                android:layout_weight="0.1"
                                android:layout_gravity="center"
                                android:textSize="@dimen/textsizeform"
                                android:layout_width="wrap_content"
                                android:text="@string/to"
                                android:layout_height="wrap_content">
                            </TextView>
                            <EditText
                                android:layout_weight="0.2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </EditText>
                            <ImageButton
                                android:background="@null"
                                android:layout_weight="0.1"
                                android:layout_width="24dp"
                                android:layout_height="35dp"
                                android:src="@drawable/calender">
                            </ImageButton>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="@string/name"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="@string/fathername"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/ageRange"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_weight="0.7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_height="35dp">

                            </Spinner>
                            <TextView
                                android:layout_weight="0.1"
                                android:layout_gravity="center"
                                android:textSize="@dimen/textsizeform"
                                android:layout_width="wrap_content"
                                android:text="@string/to"
                                android:layout_height="wrap_content">
                            </TextView>
                            <Spinner
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_height="35dp">

                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_width="wrap_content"
                            android:text="@string/height"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_weight="0.7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_height="35dp">

                            </Spinner>
                            <TextView
                                android:layout_weight="0.1"
                                android:layout_gravity="center"
                                android:textSize="@dimen/textsizeform"
                                android:layout_width="wrap_content"
                                android:text="@string/end"
                                android:layout_height="wrap_content">
                            </TextView>
                            <Spinner
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_height="35dp">

                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="@string/gender"
                            android:layout_height="wrap_content">
                        </TextView>
                        <Spinner
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_height="35dp">

                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="@string/state"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:hint="@string/state"
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="Dress"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:hint="pant/shirt"
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="Dress Upper Color"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:hint="ex. pink/blue"
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsizeform"
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:text="Dress Lower Color"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:hint="ex. pink/blue"
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                    <Button
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:text="filter"
                        android:textStyle="bold"
                        android:background="@color/colorAccent"
                        android:textColor="@color/whiteTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>

</RelativeLayout>
